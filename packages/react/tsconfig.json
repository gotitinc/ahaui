{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // Should be "react-jsx" for React 17
    // Ref: https://github.com/microsoft/TypeScript/issues/41882#issuecomment-940734525
    "jsx": "react",
    "baseUrl": "./src/"
  },
  "include": [
    "src",
    "@types"
  ]
}
